#!/usr/bin/env bash

set -e

if [ -n "$(git status --porcelain)" ]
then
  echo "Commit changes before releasing" 1>&2
  exit 1
fi

version=$1

if [ -z "$version" ]
then
  echo "Usage: $0 VERSION" 1>&2
  exit 1
fi

docker build -t "pprabu49/concourse-dcind-jdk:$version" .

docker push pprabu49/concourse-dcind-jdk:"$version"

git tag $version

git push
git push --tags
